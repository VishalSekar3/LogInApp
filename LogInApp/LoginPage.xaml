<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LogInApp.LoginPage">
    <ContentPage.Content>
		<StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="Center" Spacing="10">
			<Entry Placeholder="Username" x:Name="EntField1" Text="{Binding EntUsername}"></Entry>
			<Entry IsPassword="True" Placeholder="Password" x:Name="EntField2" Text="{Binding Password}"></Entry>
			<Button Text="Forgot Password?"  x:Name="BtnForgot" Clicked="BtnForgot_Clicked" HorizontalOptions="End" FontSize="Micro"></Button>
			<Button Text="Login" x:Name="BtnLogin" Clicked="BtnLogin_Clicked" FontSize="Subtitle"></Button>
			<Button Text="New User? Register here" x:Name="BtnRegister" Clicked="BtnRegister_Clicked" FontSize="Subtitle"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>